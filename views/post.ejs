
<% include layout %>
    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <% if( typeof posts!== 'undefined' && posts.image !== 'no-image' ) { %>
    <!-- <header class="intro-header" style="background-image: url('/uploads/<%= posts.image %>')">-->
    <header class="intro-header" style="background-image: url('/<%= posts.image %>')">
    <!--<header class="intro-header" style="background-image: url('/hacking.png')">-->
    <% }else{ %>
    <header class="intro-header" style="background-image: url('/images/addposts-me1.jpg')">
    <% } %>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <% if( typeof posts!== 'undefined' ) { %>
                        <h1><%= posts.title %></h1>
                        <h2 class="subheading"><%= posts.subtitle %></h2>
                        <span class="meta">Posted by <%= posts.author %> in <a href="/posts/category/<%= posts.category %>"><%= posts.category %></a> on <%= moment(posts.date).format('DD/MM/YYYY') %></span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div>
        <% if (success_msg.length > 0){ %>

            <div class="alert alert-success"><%= success_msg %></div>

            <% } %>

            <% if (error_msg.length > 0){ %>

            <div class="alert alert-danger"><%= error_msg %></div>

        <% } %>
    </div>
    <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <p><%- posts.content %></p>
                
                </div>
            </div>
        </div>
    </article>

    <hr>
    <div class= "container">
        <div class="row">
            <div class="col-xs-6 text-right">
                <p>Delete Post
                    <a href="/posts/delete/<%= posts._id %>">  
                    <span class="fa-stack fa-sm">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-times fa-stack-1x fa-inverse"></i>
                    </span>
                    </a>
                </p>
            </div>
             <div class="col-xs-6 text-justify">
                <p>Edit Post
                    <a href="/posts/edit/<%= posts._id %>">  
                    <span class="fa-stack fa-sm">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-pencil-square-o fa-stack-1x fa-inverse"></i>
                    </span>
                    <% } %>
                    </a>
                </p>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <ul class="list-inline text-center">
                        <li>
                            <a href="#">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                        <li>
                            <a href="https://www.facebook.com/people/Yagnesh-Yerninti/100001744308244">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                        <li>
                            <a href="https://github.com/yagnesh-y">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-github fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                    </ul>
                    <p class="copyright text-muted">Copyright &copy; Blog 2017</p>
                </div>
            </div>
        </div>
    </footer>

     <!-- jQuery -->
    <script src="/javascripts/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/javascripts/bootstrap.js"></script>

    <!-- Contact Form JavaScript -->
    <script src="/javascripts/jqBootstrapValidation.js"></script>
    <script src="/javascripts/contact_me.js"></script>

    <!-- Theme JavaScript -->
    <script src="/javascripts/clean-blog.min.js"></script>

</body>

</html>
